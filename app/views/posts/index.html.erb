
<h1>Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <% if logged_in? %> 
      <td><%= post.user.name %></td>
      <% end %>
    </tr>
  <% end %>
</table>