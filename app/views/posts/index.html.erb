
<h1>Welcome to Members Only Club's Posts Updates</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th>Author</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td></td>
      <td></td>
      <td><%= post.content %></td>
      <td></td>
      <td></td>
      <% if logged_in? %> 
      <td><%= post.user.name %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if logged_in? %>
  <%= link_to "Sign out", logout_path %>
  <br>
  <%= link_to "Create a Post", new_post_url %>
<% else %>
  <p>Have an account? <%= link_to "Sign in here!", login_path %></p>
<% end %>