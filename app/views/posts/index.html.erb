
<h1>Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>  </th>

    
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <%= if logged_in? %> 
      <td><%= link_to user.name, user %></td>
      <% end %>
    </tr>
  <% end %>
</table>